    <!-- Modal for enlarged image -->
    <div id="cvModal" class="modal" onclick="closeModal()">
        <span class="close" onclick="closeModal()">&times;</span>
        <img class="modal-content" id="modalImg" src="cv_jonas_2.jpg" alt="Jonas' CV" />
    </div>

    <script>
        function openModal() {
            document.getElementById('cvModal').style.display = 'block';
        }
        function closeModal() {
            document.getElementById('cvModal').style.display = 'none';
        }
        // Prevent modal from closing when clicking the image itself
        document.getElementById('modalImg').onclick = function(event) {
            event.stopPropagation();
        };
        // Optional: close modal with ESC key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') closeModal();
        });
    </script>
